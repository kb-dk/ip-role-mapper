<?xml version="1.0" encoding="UTF-8"?>
<web-app version="2.5" xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">

    <display-name>IPAddressRoleMapper</display-name>
    <description>Map an IP address to a DOMS role</description>

    <context-param>
        <param-name>log4jconfig</param-name>
        <param-value>/WEB-INF/log4jproperties.xml</param-value>
    </context-param>

    <context-param>
        <param-name>dk.statsbiblioteket.iprolemapping.configurationFile</param-name>
        <param-value>/WEB-INF/ipRangesAndRoles.xml</param-value>
    </context-param>

    <listener>
        <listener-class>
            dk.statsbiblioteket.doms.webservices.ConfigContextListener</listener-class>
    </listener>

    <servlet>
        <servlet-name>IPAddressRoleMapper</servlet-name>
        <servlet-class>com.sun.jersey.spi.container.servlet.ServletContainer</servlet-class>
        <init-param>
            <param-name>com.sun.jersey.config.property.packages</param-name>
            <param-value>dk.statsbiblioteket.doms.iprolemapper.webservice</param-value>
        </init-param>
    </servlet>
    <servlet-mapping>
        <servlet-name>IPAddressRoleMapper</servlet-name>
        <url-pattern>/*</url-pattern>
    </servlet-mapping>

</web-app>
